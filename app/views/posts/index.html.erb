<div class="row">
  <div class="col-lg-3">
    <div class="panel panel-default">
      <div class="panel-body" style="padding-top: 0px; padding-right: 0px;">
        <div class="row">
          <img src="/assets/banner.jpg" class="img-responsive">
        </div>
        <div class="row">
          <div class="col-xs-3">
            <%= image_tag(current_user.avatar.url, class: "profile-image img-circle circle-border m-b-md", style: "width: 80px; height: 80px; margin-top: -25px;")%>
          </div>
          <div class="col-xs-8 col-xs-offset-1" style="margin-top: 5px;">
            <div style="font-size: 18px;"><strong><%=current_user.name%></strong></div>
            <div>@<%=current_user.username%></div>
          </div>
        </div>
        <div class="row" style="margin-top: 20px;">
          <div class="col-xs-4">Posts</div>
          <div class="col-xs-4">Following</div>
          <div class="col-xs-4">Followers</div>
        </div>
        <div class="row">
          <div class="col-xs-4"><%= current_user.posts.length %></div>
          <div class="col-xs-4"><%= current_user.followeds.length %></div>
          <div class="col-xs-4"><%= current_user.followers.length %></div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-lg-9">
    <div class="row">
      <div class="col-lg-5 col-lg-offset-3">
        <div class="span4 well" style="padding-bottom: 55px; margin-bottom: 0;">
          <%= render "form" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="chat-panel panel panel-default" style="margin-top: 25px;">
        <div class="panel-body">
          <ul class="chat">
            <% if @posts.blank? %>
              <div class="text-center">
                <h2><%=current_user.name%> didin't make any Post yet :(</h2>
              </div>
            <% else %>
              <% @posts.each do |post| %>
                <%= render post %>
              <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
