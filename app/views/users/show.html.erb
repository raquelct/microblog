<div class="row">
  <div class="col-xs-4" style="margin-left: 15px; margin-top: 25px;">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="row">
          <div class="col-xs-3">
            <i class="fa fa-comments fa-5x"></i>
          </div>
          <div class="col-xs-9 text-left" style="padding-left: 55px; margin-top: 15px;">
            <div>Name</div>
            <div>@username</div>
          </div>
        </div>
        <div class="row" style="margin-top: 10px;">
          <div class="col-xs-4">Posts</div>
          <div class="col-xs-4">Following</div>
          <div class="col-xs-4">Followers</div>
        </div>
        <div class="row">
          <div class="col-xs-4">1</div>
          <div class="col-xs-4">0</div>
          <div class="col-xs-4">0</div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-4" style="margin-top: 25px;">
    <div class="span4 well" style="padding-bottom: 40px; margin-bottom: 0;">
      <form>
        <div class="form-group">
          <textarea class="form-control" placeholder="Enter text" rows="3"></textarea>
          <h6 class="pull-left" style="margin-top: 20px; margin-left: 5px;">
            <span id="characters_remaining">320</span>
            characters remaining
          </h6>
          <button class="btn btn-primary pull-right" style="margin-top: 10px;" type="button">New Post</button>
        </div>
      </form>
    </div>
  </div>
</div>
<div class="col-xs-12 m-b">
  <div class="chat-panel panel panel-default" style="margin-top: 25px;">
    <div class="panel-body">
      <ul class="chat">
        <li class="left clearfix">
          <span class="chat-img pull-left">
            <img class="img-circle" src="http://placehold.it/50/55C1E7/fff" alt="User Avatar">
          </span>
          <div class="chat-body clearfix">
            <div class="header">
              <strong class="primary-font">Jack Sparrow</strong>
              <small class="pull-right text-muted">
                <i class="fa fa-clock-o fa-fw"></i>
                12 mins ago
              </small>
            </div>
            <p> Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur bibendum ornare dolor, quis ullamcorper ligula sodales. </p>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>
